<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MFPA"
    android:background="#ffcee1ff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/But1"
        android:background="#ffffa813"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/But2"
        android:layout_alignStart="@+id/But2"
        android:layout_alignRight="@+id/But2"
        android:layout_alignEnd="@+id/But2"
        android:onClick="spotifyMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/But2"
        android:layout_marginTop="10dp"
        android:background="#ffffa813"
        android:layout_below="@+id/But1"
        android:layout_alignLeft="@+id/But3"
        android:layout_alignStart="@+id/But3"
        android:layout_alignRight="@+id/But3"
        android:layout_alignEnd="@+id/But3"
        android:onClick="scoreMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/But3"
        android:background="#ffffa813"
        android:layout_below="@+id/But2"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/But4"
        android:layout_alignStart="@+id/But4"
        android:layout_alignRight="@+id/But4"
        android:layout_alignEnd="@+id/But4"
        android:onClick="libraryMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/But4"
        android:background="#ffffa813"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/But3"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/But5"
        android:layout_alignStart="@+id/But5"
        android:layout_alignRight="@+id/But5"
        android:layout_alignEnd="@+id/But5"
        android:onClick="buildBiggerMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/But5"
        android:background="#ffffa813"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/But4"
        android:layout_alignRight="@+id/But6"
        android:layout_alignEnd="@+id/But6"
        android:layout_alignLeft="@+id/But6"
        android:layout_alignStart="@+id/But6"
        android:onClick="xyzMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/But6"
        android:background="#ffff2145"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/But5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="capstoneMessage" />
</RelativeLayout>
